<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>One Article</title>
  </head>
  <body>
    <h1><%= user.title %></h1>
    <p><%= user.description %></p>
    <p><%= user.tags %></p>
    <p><%= user.author %></p>
    <p><%= user.likes %></p>

    <button>
      <a href="/articles/<%= user.id %>/edit">Edit</a>
    </button>
    <button>
      <a href="/articles/<%= user.id %>/delete ">Delete</a>
    </button>
    <button>
      <a href="/articles">All Articles</a>
    </button>

    <div class="comments-form">
      <form action="/articles/<%= user.id %>/comments " method="POST">
        <textarea
          name="text"
          cols="30"
          rows="10"
          placeholder="Comment"
        ></textarea>
        <input type="submit" value="Add Comment" />
      </form>
    </div>

    <div class="comments">
      <% user.comments.forEach((comment)=>{ %>
      <h2><%= comment.text %></h2>
      <button>
        <a href="/comments/<%= comment.id %>/edit ">Edit comment</a>
      </button>
      <button>
        <a href="/comments/<%= comment.id %>/delete ">Delete comment</a>
      </button>
      <% }) %>
    </div>
  </body>
</html>
